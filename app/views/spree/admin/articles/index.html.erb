<% content_for :page_title do %>
  <%= Spree.t(plural_resource_name(Spree::Article)) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_article), new_object_url, { class: "btn-success", icon: 'add', id: 'admin_new_vendor' } %>
<% end if can?(:create, Spree::Article) %>


<% if @articles.any? %>
  <table class="table sortable" data-hook="articles_table" data-sortable-link="<%= update_positions_admin_articles_url %>">
    <thead>
      <tr data-hook="vendors_header">
        <th>
          <%= I18n.t(:priority, scope: 'activerecord.attributes.spree/article') %>
        </th>
        <th>
          <%= sort_link @search, :name, I18n.t(:name, scope: 'activerecord.attributes.spree/article') %>
        </th>
        <th>
          <%= sort_link @search, :state, I18n.t(:state, scope: 'activerecord.attributes.spree/article') %>
        </th>
        <th>
          <%= I18n.t(:about_us, scope: 'activerecord.attributes.spree/article') %>
        </th>
        <th>
          <%= I18n.t(:contact_us, scope: 'activerecord.attributes.spree/article') %>
        </th>
        <% if Spree.version.to_f >= 3.6 %>
          <th>
            <%= I18n.t(:image, scope: 'activerecord.attributes.spree/article') %>
          </th>
        <% end %>
        <th>
          <%= sort_link @search, :created_at, I18n.t(:created_at, scope: 'activerecord.attributes.spree/article') %>
        </th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr id="<%= spree_dom_id article %>" data-hook="articles_row">
          <td class="move-handle text-center">
            <span class="icon icon-move handle"></span>
          </td>
          <td>
            <%= article.title %>
          </td>
          <!--
          <td>
            <span class="label label-<#%= vendor.state.downcase %>"><#%= vendor.state.humanize.downcase %></span>
            <span class="icon icon-filter filterable js-add-filter" data-ransack-field="q_state_eq" data-ransack-value="<#%= vendor.state %>"></span>
          </td>
          <td>
            <#%= vendor.about_us&.truncate(20) %>
          </td>
          <td>
            <#%= vendor.contact_us&.truncate(20) %>
          </td>
          -->
          <!--
          <#% if Spree.version.to_f >= 3.6 %>
            <td>
              <#%= image_tag main_app.url_for(vendor.image.url(:mini)) if vendor.image %>
            </td>
            <#% end %>
          -->
          <td>
            <%= pretty_time(article.created_at) %>
          </td>
          <td class="actions actions-2 text-right">
            <%= link_to_edit article, no_text: true, class: 'edit' if can?(:edit, article) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info alpha twelve columns no-objects-found">
    <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::Article)) %>
  </div>
<% end %>

